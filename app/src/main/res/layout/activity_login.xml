<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="com.example.aaa.liaoliao.LoginActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:id="@+id/main_listview"
        ></ListView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="+"
         />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/chat_et1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send"
            android:onClick="btnSendOnClick"
            android:id="@+id/chat_btn1"/>

        </LinearLayout>
    <LinearLayout
        android:id="@+id/face_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/chat_image1"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/face1"
            android:onClick="btnFaceOnClick"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:id="@+id/chat_image2"

            android:onClick="btnFaceOnClick"
            android:layout_width="72dp"
            android:src="@drawable/face2"
            android:layout_marginLeft="5dp"
            android:layout_height="72dp" />
        <ImageView
            android:onClick="btnFaceOnClick"
            android:id="@+id/chat_image3"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/face2"/>
        <ImageView
            android:onClick="btnFaceOnClick"
            android:id="@+id/chat_image4"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/face4"/>

        </LinearLayout>

</LinearLayout>
